<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="@dimen/settings_items_height"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/image_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/icons_padding_left"
        android:layout_marginStart="13dp"
        android:contentDescription="@string/sv_albumPicture"
        />

    <ImageView
        android:id="@+id/image_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/settings_back_switch"
        android:layout_marginTop="@dimen/indent_bottom"
        android:layout_marginStart="@dimen/icons_padding_left"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/light_mode"
        />

    <TextView
        android:id="@+id/as_TrackName"
        android:layout_toEndOf="@+id/image_album"
        android:layout_toStartOf="@+id/image_track"
        style="@style/searchViewText_track"
        android:layout_marginTop="14dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_toEndOf="@+id/image_album"
        android:layout_toStartOf="@+id/image_track"
        android:layout_below="@+id/as_TrackName"
        android:layout_marginStart="@dimen/icons_padding_left"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewFirst"
            android:layout_width="wrap_content"
            style="@style/searchViewText_band" />

        <ImageView
            android:id="@+id/imageViewVector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot" />

        <TextView
            android:id="@+id/textViewSecond"
            style="@style/searchViewText_band"/>


    </LinearLayout>



</RelativeLayout>
