<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layot_height"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/settings_image_button"
            android:layout_marginStart="@dimen/settings_image_button"
            android:background="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/light_mode_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_marginVertical="@dimen/settings_image_button"
            android:layout_marginEnd="@dimen/indent_right"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/indent_title_12"
            android:paddingTop="@dimen/title_top"
            android:paddingBottom="@dimen/indent_title_12"
            android:text="@string/mediateka"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            android:textFontWeight="500"
            android:textSize="@dimen/text_size_title"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSecondary"
        app:tabMode="fixed"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorColor="@color/near_black_colors"
        app:tabTextColor="@color/near_black_colors"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>