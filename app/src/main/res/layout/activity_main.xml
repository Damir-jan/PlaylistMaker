<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_colors"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="@string/title_hello"
        android:textColor="#ffffff"
        android:textSize="26sp" />

    <Button
        android:id="@+id/Search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_weight="1"
        android:backgroundTint="#ffffff"
        android:text="@string/title_search"
        android:textColor="@color/black_colors"
        android:textSize="@dimen/size_main"
        app:cornerRadius="@dimen/radius_main"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icons_padding_left"
        app:iconTint="@color/black_colors"
        android:foreground="?attr/selectableItemBackground"/>

    <Button
        android:id="@+id/Mediateka"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_weight="1"
        android:backgroundTint="#ffffff"
        android:text="@string/title_media"
        android:textColor="@color/black_colors"
        android:textSize="@dimen/size_main"
        app:cornerRadius="@dimen/radius_main"
        app:icon="@drawable/mediateka"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icons_padding_left"
        app:iconTint="@color/black_colors"
        android:foreground="?attr/selectableItemBackground"/>

    <Button
        android:id="@+id/Settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_weight="1"
        android:backgroundTint="#ffffff"
        android:text="@string/title_settings"
        android:textColor="@color/black_colors"
        android:textSize="@dimen/size_main"
        app:cornerRadius="@dimen/radius_main"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icons_padding_left"
        app:iconTint="@color/black_colors"
        android:foreground="?attr/selectableItemBackground"/>

</LinearLayout>
