<?xml version="1.0" encoding="utf-8"?>
<resources>
   <!-- это строка настроек -->
    <style name="string_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:layout_marginStart">@dimen/settings_indentation_left</item>
        <item name="android:layout_marginEnd">@dimen/settings_indentation_right</item>
        <item name="android:layout_marginVertical">@dimen/settings_menu_vertical</item>
        <item name="android:textSize">@dimen/size_settings_16</item>
        <item name="android:textColor">@color/black_colors</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <!-- это стиль иконок -->
    <style name="icon_settings">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginEnd">12dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_marginBottom">@dimen/indent_bottom</item>
    <item name="android:layout_marginTop">@dimen/menu_height</item>
    <item name="android:layout_gravity">end</item>
    </style>

    <!-- это стиль главного экрана -->
    <style name="main_screen"   parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/switch_indent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/near_black_colors</item>
        <item name="android:textSize">@dimen/size_main</item>
        <item name="cornerRadius">@dimen/radius_main</item>
        <item name="icon">@drawable/mediateka</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icons_padding_left</item>
        <item name="iconTint">@color/black_colors</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <!-- это стиль свича настроек -->
    <style name="switch_settings" >

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingVertical">@dimen/margin_vertical</item>
        <item name="android:paddingStart">9dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical</item>
        <item name="android:layout_marginEnd">@dimen/switch_indent</item>
        <item name="android:switchMinWidth">@dimen/switch_indent</item>
        <item name="android:thumbTint">@color/switch_tint</item>
        <item name="android:trackTint">@color/switch_thumbTint</item>
    </style>

    <style name="searchViewText" >

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:text">Playlist maker</item>
    </style>

    <!-- это стиль названия песни -->
    <style name="searchViewText_track" parent="searchViewText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:layout_marginStart">@dimen/icons_padding_left</item>
        <item name="android:textSize">@dimen/size_settings</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- это стиль имени артиста  -->
    <style name="searchViewText_band" parent="searchViewText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/margin_vertical</item>
        <item name="android:textColor">?attr/colorOnBackground</item>

    </style>

    <!-- это стиль кнопки назад  -->
    <style name="ImageViewBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/light_mode_back</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <!-- это стиль шрифта   -->
    <style name="TextMedium22">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>


    <style name="TextInputLayoutStyle" >
        <item name="boxStrokeColor">@drawable/input_new_playlist</item> <!-- Цвет рамки в обычном состоянии -->
        <item name="hintTextColor">@color/blue_colors</item>
    </style>

    <style name="TextInputEditTextStyle" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>  <!-- Цвет подсказки, когда она находится внутри поля (при отсутствии фокуса) -->
        <item name="android:textColor">?attr/colorOnSecondary</item>

    </style>

    <style name="ButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingVertical">6dp</item>
        <item name="paddingStart">8dp</item>
        <item name="paddingEnd">6dp</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorButtonNormal</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundedCornersImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TextRegular12">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextRegular16">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextMedium19">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MyAlertDialogTheme.Light" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/blue_colors</item> <!-- Цвет кнопок -->
    </style>

</resources>




